<resources>
    <!-- Base application theme. -->
    <style name="Theme.MarvelFans" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorSecondary">@color/black_light</item>
        <item name="colorAccent">@color/grey_light</item>
    </style>

    <style name="Theme.MarvelFans.NoActionBar" parent="Theme.MarvelFans">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:toolbarStyle">@style/ToolbarStyle</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>
    </style>

    <style name="Theme.MarvelFans.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MarvelFans.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolbarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="android:contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>

    </style>

    <style name="TitleToolbar">
        <item name="android:gravity">center</item>
        <item name="android:textSize">25sp</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TitleTextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">23sp</item>
    </style>

    <style name="TitleTextView.OffCaps" parent="TitleTextView">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TitleTextView.OffCaps.xs" parent="TitleTextView.OffCaps">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ContentTextView.Default">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey_dark_500</item>
    </style>

    <style name="ContentTextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="LoginTheme" parent="FirebaseUI">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/grey_light</item>
        <item name="colorOnBackground">#CC3D3D</item>
    </style>
</resources>
